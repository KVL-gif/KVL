class krokodil:
    def __init__(self):
        self.glaz = random.randint(1,9)
        self.nog = random.randint(1,9)
        self.hvost = random.randint(1,9)
    def raz(self):
        if self.glaz >= 1:
            self.glaz += random.randint(-1,1)
        else:
            self.glaz += random.randint(0,1)
        if self.nog >= 1:
            self.glaz += random.randint(-1,1)
        else:
            self.nog += random.randint(0,1)
        if self.hvost >= 1:
            self.glaz += random.randint(-1,1)
        else:
            self.hvost += random.randint(0,1)
    def srv(self):
        return (10 - self.glaz) + (10 - self.nog) + (10 - self.hvost)
krokodils = []
for i in range(100000):
    krokodils.append(krokodil())
w = 1
while True:
    for i in range(10000):
        q = krokodils[i].srv()
        if q == 0:
            print(w,i)
            exit()
        krokodils[i].raz()
    w += 1
