import telebot
from random import randint

bot = telebot.TeleBot(token='Только для лохов')

@bot.message_handler(commands=['start'])

def start_message(message):
    bot.send_message(message.chat.id, 'Привет! Это бот с гороскопом. И чтобы получить гороскоп воспользуйтесь командой /next')

@bot.message_handler(commands=['next'])

def next_message(message):
    b = 0
    bot.send_message(message.chat.id, 'Ведите сегоднешнею дату и ваш знак задиака в двух разных строчках')
    @bot.message_handler(content_types=['text'])
    def vod1(message):
        @bot.message_handler(content_types=['text'])
        def send_text(message):
            bot.send_message(message.chat.id, 'Возможно на вас сегодня упадёт метиороит')

bot.polling()
