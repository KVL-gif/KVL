import telebot

bot = telebot.TeleBot(token='кто прочитал тот лох')
lsd = []

@bot.message_handler(commands=['start'])

def start_message(message):
    bot.send_message(message.chat.id, 'Приветсую дорогой покупатель это бот для трекинга(отслеживания) покупок')
    bot.send_message(message.chat.id, 'что-бы добавить продукцию напишите /append и название товара')
    bot.send_message(message.chat.id, 'что-бы убрать продукцию напишите /pop и название товара')
    bot.send_message(message.chat.id, 'что-бы получить список товаров напишите /watch')
    
@bot.message_handler(commands=['append'])

def appends(message):
    global lsd
    bot.send_message(message.chat.id, 'что вы хотите добавить?')
    
    @bot.message_handler(content_types=['text'])
    
    def dekor(message):
        a = message.text
        lsd.append(a)

@bot.message_handler(commands=['pop'])

def pops(message):
    global lsd
    bot.send_message(message.chat.id, 'что вы хотите брать?')
    
    @bot.message_handler(content_types=['text'])
    
    def dekor(message):
        a = message.text
        t = lsd.index(a)
        if t == -1:
            bot.send_message(message.chat.id, 'Извените, но вы такого не добавляли')
        else:
            lsd.pop(t)

@bot.message_handler(commands=['watch'])

def watch(message):
    global lsd
    bot.send_message(message.chat.id, 'Вот ваш список на данный момент')
    bot.send_message(message.chat.id, ' '.join(list(map(str,lsd))))

bot.polling()
